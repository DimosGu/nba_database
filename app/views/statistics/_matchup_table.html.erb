<table class="table table-bordered table-striped table-hover table-condensed">
	<% game.each_with_index do |player, index| %>
		<% if player.player_matchup_id != @id %>
			<tr class="row">
				<th>Name</th>
				<th>Team</th>
				<th>Position</th>
				<th>Height</th>
				<th>Date</th>
				<th>MP</th>
				<th>FG</th>
				<th>FGA</th>
				<th>FG%</th>
				<th>3P</th>
				<th>3PA</th>
				<th>3P%</th>
				<th>FT</th>
				<th>FTA</th>
				<th>FT%</th>
				<th>ORB</th>
				<th>DRB</th>
				<th>AST</th>
				<th>STL</th>
				<th>BLK</th>
				<th>TO</th>
				<th>PF</th>
				<th>PTS</th>
			</tr>
		<% end %>
		<% @id = player.player_matchup_id %>
		<% if player.MP == "Total" %>
		<tr class="row danger">
		<% elsif index%2 == 0 %>
		<tr class="row info">
		<% else %>
		<tr class="row warning">
		<% end %>
			<td><%= player.name %> </td>
			<% if player.name != "Total" %>
			<td><%= Team.find(Player.find_by_name(player.name).team_id).name %></td>
			<% end %>
			<td><%= Player.find_by_name(player.name).position %></td>
			<td><%= Player.find_by_name(player.name).height %></td>
			<td><%= player.date %></td>
			<td><%= player.MP %></td>
			<td><%= player.FG %></td>
			<td><%= player.FGA %></td>
			<td><%= player.FGP %></td>
			<td><%= player.ThP %></td>
			<td><%= player.ThPA %></td>
			<td><%= player.ThPP %></td>
			<td><%= player.FT %></td>
			<td><%= player.FTA %></td>
			<td><%= player.FTP %></td>
			<td><%= player.ORB %></td>
			<td><%= player.DRB %></td>
			<td><%= player.AST %></td>
			<td><%= player.STL %></td>
			<td><%= player.BLK %></td>
			<td><%= player.TO %></td>
			<td><%= player.PF %></td>
			<td><%= player.PTS %></td>
		</tr>
	<% end %>
</table>