<% @page_title = "Team Stats"%>
<div align="center">
<%= link_to("Home", :controller => 'access', :action => 'index') %> </br>
</div>
<h3 align="center">Teams</h3>
<table style="margin-left: 10px; margin-right: 10px; margin-bottom: 10px; margin-top: 10px; width: 70%">
