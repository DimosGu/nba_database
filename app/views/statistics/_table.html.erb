<table>
	<tr>
		<th>Name and Height</th>
		<th>ORtg</th>
		<th>DRtg</th>
		<th>Total MP</th>
		<th>FG%</th>
		<th>FGA</th>
		<th>FGA per MP</th>
		<th>3P%</th>
		<th>3PA</th>
		<th>3PA per MP</th>
		<th>FT%</th>
		<th>FTA</th>
		<th>FTA per MP</th>
		<th>TO</th>
		<th>TO per MP</th>
		<th>ORB</th>
		<th>AST</th>
		<th>BLK</th>
		<th>PTS</th>
	</tr>
	<% players.each do |player| %>
		<tr>
			<td><%= link_to(player.name, :controller => 'statistics', :action => 'matchup', :id => player.id, :team_id => params[:id]) + " " + player.height %></td>
			<td><%= player.ORtg %></td>
			<td><%= player.DRtg %></td>
			<td><%= player.MP %></td>
			<td><%= player.FGP %></td>
			<td><%= player.FGA %></td>
			<td><%= (player.FGA.to_f/player.MP.to_f).round(2) %></td>
			<td><%= player.ThPP %></td>
			<td><%= player.ThPA %></td>
			<td><%= (player.ThPA.to_f/player.MP.to_f).round(2) %></td>
			<td><%= player.FTP %></td>
			<td><%= player.FTA %></td>
			<td><%= (player.FTA.to_f/player.MP.to_f).round(2) %></td>
			<td><%= player.TO %></td>
			<td><%= (player.TO.to_f/player.MP.to_f).round(2) %></td>
			<td><%= player.ORB %></td>
			<td><%= player.AST %></td>
			<td><%= player.BLK %></td>
			<td><%= player.PTS %></td>
		</tr>
	<% end %>
</table>