<div align="center">
	<%= link_to("Home", :controller => 'access', :action => 'index') %></br>
</div>
<div align="center">
	<h5>Seasons</h5>
	<nav>
		<% @seasons.each do |season| %>
			<li><%= link_to(season.year, :controller => 'statistics', :action => 'bet', :id => season.id, :time => params[:time]) %></li>
		<% end %>
	</nav>
</div>
</br>

<table align="center">
	<tr>
		<th colspan="3"><%= @season.year %></th>
	</tr>
	<tr>
		<th>Time</th><th>First Half</th><th>Games</th>
	</tr>
	<% (0...@half_bets.size).each do |i|%>
		<tr>
			<td><%= @half_bets[i].time %></td>
			<td><%= @half_bets[i].win_percent %></td>
			<td><%= @half_bets[i].total_bet %></td>
		</tr>
	<% end %>
	<tr>
		<th>Time</th><th>First Half</th><th>Games</th>
	</tr>
	<% (0...@quarter_bets.size).each do |i|%>
		<tr>
			<td><%= @quarter_bets[i].time %></td>
			<td><%= @quarter_bets[i].win_percent %></td>
			<td><%= @quarter_bets[i].total_bet %></td>
		</tr>
	<% end %>
</table>