<% @page_title = Time.now.tomorrow.strftime("%B %d") %>

<div align="center">
<%= link_to("Home Page", :controller => 'access', :action => 'index') %>
</div>

<div id="main">
	<div id="list">
		<h2 align="center"><%= Time.now.tomorrow.strftime("%B %d") %></h2>
		<div align="center">
			<h4 align="center">Home vs Away</h4>
			<% @teams.each do |team| %>
			<li><%= link_to(team.tomorrow_team.name + " vs " + team.name, {:controller => 'statistics', :action => 'tomorrow', :id => team.id}) %></li>
			<% end %>
		</div>
	</div>
</div>