<% @page_title = Time.now.tomorrow.strftime("%B %d") %>

<%= link_to("Home Page", :controller => 'access', :action => 'index') %>

<div id="main">
	<div id="list">
		<h2><%= Time.now.tomorrow.strftime("%B %d") %></h2>
		<ul>
			<h4>Home vs Away</h4>
			<% @teams.each do |team| %>
			<li><%= link_to(team.name + " vs " + team.tomorrow_team.name, {:controller => 'statistics', :action => 'tomorrow', :id => team.id}) %></li>
			<% end %>
		</ul>
	</div>
</div>